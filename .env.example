# Server
HACKRX_API_TOKEN=replace-with-secure-token

# Groq
GROQ_API_KEY=replace-with-groq-api-key
GROQ_MODEL=llama-3.1-8b-instant
GROQ_FAST_MODEL=llama-3.1-8b-instant

# MongoDB (optional)
MONGODB_URI=
MONGODB_DATABASE=hackrx_groq_intelligence
MONGODB_COLLECTION=document_cache
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME=30000
MONGODB_CONNECT_TIMEOUT=5000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Redis L2 cache (optional)
REDIS_URL=
REDIS_CONNECTION_STRING=

# Retrieval/Extraction budgets
FAST_MODE=1
CHUNK_BUDGET=800
RETRIEVAL_TIME_BUDGET_MS=1200
MAX_PAGES=150
MAX_TEXT_BYTES=800000
EXTRACT_TIME_BUDGET_MS=8000
RETRIEVAL_TRACE=0
MAX_CONCURRENCY=6

# OCR (optional)
ENABLE_OCR=1
OCR_MAX_PAGES=100
OCR_TIME_BUDGET_MS=12000
OCR_DPI=200
OCR_LANG=eng
TESSERACT_CMD=
TESSERACT_CONFIG=--oem 1 --psm 6

# Known-target hints (do not hardcode secrets)
# Used internally to detect known documents like Arogya Sanjeevani
# Leave empty to rely on URL patterns

# Vercel/Procfile deploys will read the FastAPI app from app_groq_ultimate.py via app.py/main.py
